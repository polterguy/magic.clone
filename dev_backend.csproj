<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
    <AssemblyName>backend</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(RunConfiguration)' == 'magic.backend' ">
    <StartAction>Project</StartAction>
    <ExternalConsole>true</ExternalConsole>
    <ApplicationURL>http://localhost:55247/</ApplicationURL>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.2" />
    <ProjectReference Include="..\..\magic.library\magic.library\dev_magic.library.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Properties\launchSettings.json" />
    <Content Remove="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="**/*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="files\misc\templates\**" />
    <Content Remove="files\misc\templates\**" />
    <EmbeddedResource Remove="files\misc\templates\**" />
    <None Remove="files\misc\templates\**" />
  </ItemGroup>

</Project>
